<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="172dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/actionNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/actionTimeTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/actionTimeTxt"
        app:layout_constraintTop_toTopOf="@+id/actionTimeTxt"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/palyerImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/actionTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="15"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/palyerImg"
        app:layout_constraintTop_toTopOf="@+id/palyerImg" />

    <TextView
        android:id="@+id/actionPersonTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toEndOf="@+id/palyerImg"
        app:layout_constraintTop_toBottomOf="@+id/actionTimeTxt" />

    <ImageView
        android:id="@+id/actionImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/actionNameTxt"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/actionNameTxt"
        app:layout_constraintTop_toTopOf="@+id/actionNameTxt"
        app:layout_constraintVertical_bias="0.181"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/actionImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/actionImg"
        app:layout_constraintTop_toTopOf="@+id/actionImg"
        tools:srcCompat="@drawable/grey_circle" />

    <TextView
        android:id="@+id/player2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/actionPersonTxt"
        app:layout_constraintStart_toStartOf="@+id/actionPersonTxt"
        app:layout_constraintTop_toBottomOf="@+id/actionPersonTxt" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/palyerImg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/palyerImg"
        app:layout_constraintTop_toTopOf="@+id/palyerImg"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@+id/actionImg"
        app:layout_constraintStart_toStartOf="@+id/actionImg"
        app:layout_constraintTop_toBottomOf="@+id/actionImg"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>